<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:padding="20dp">


    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome  ,"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Username"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/txtwelcome"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/buttonBerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#2196F3"
        android:text="Berita"
        app:layout_constraintTop_toBottomOf="@+id/textUsername"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/buttonKalkulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="#2196F3"
        android:text="Kalkulator"
        app:layout_constraintTop_toBottomOf="@+id/buttonBerita"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#2196F3"
        android:text="About"
        app:layout_constraintTop_toBottomOf="@+id/buttonKalkulator"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#2196F3"
        android:text="Logout"
        app:layout_constraintTop_toBottomOf="@+id/buttonAbout"
        tools:layout_editor_absoluteX="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>